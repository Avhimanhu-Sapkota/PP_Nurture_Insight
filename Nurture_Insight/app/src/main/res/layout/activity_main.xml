<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/main_fragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_navSpace" />

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/main_navSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        app:active_centre_button_background_color="@color/ni_lightBlue"
        app:active_centre_button_icon_color="@color/ni_blue"
        app:active_item_color="@color/ni_blue"
        app:centre_button_color="@color/white"
        app:centre_button_icon="@drawable/ic_baseline_self_improvement_24"
        app:inactive_centre_button_icon_color="@color/ni_blue"
        app:inactive_item_color="@color/ni_midBlue"
        app:space_background_color="@color/ni_gray"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_icon_size="30dp"
        app:space_item_text_size="@dimen/space_item_text_default_size" />


</RelativeLayout>

