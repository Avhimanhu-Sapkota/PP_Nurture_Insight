<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:id="@+id/chat_dark_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ni_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/ni_lightBlue">

            <TextView
                android:id="@+id/chat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="Chat Message"
                android:textColor="@color/ni_blue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/chat_message_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_message"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="Date"
                android:textAlignment="textEnd"
                android:textColor="@color/ni_midBlue"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/chat_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_message_date"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="Username"
                android:textAlignment="textEnd"
                android:textColor="@color/ni_midBlue"
                android:textSize="12sp" />



        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>