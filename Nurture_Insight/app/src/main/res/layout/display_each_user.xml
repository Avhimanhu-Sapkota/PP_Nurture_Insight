<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/eachUser_cardView"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:id="@+id/eachUser_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ni_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/ni_lightBlue">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/eachUser_profileImage"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile_picture"
                app:civ_border_color="@color/ni_blue"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eachUser_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eachUser_profileImage"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alegreya_sans_bold"
                android:text="Patient\'s Name"
                android:gravity="center"
                android:textColor="@color/ni_blue"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/eachUser_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/alegreya_sans"
                android:layout_below="@+id/eachUser_Name"
                android:gravity="center"
                android:text="Contact at:\n98XXXXXXXXXX\ntest@gmail.com"
                android:textColor="@color/ni_blue"
                android:textSize="17sp" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>