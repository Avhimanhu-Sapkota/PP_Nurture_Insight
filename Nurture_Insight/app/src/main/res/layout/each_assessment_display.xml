<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/assessmentProgressDate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:gravity="center"
            android:text="Jun 10, 2021"
            android:textColor="@color/ni_blue"
            android:textSize="12sp"/>

        <ProgressBar
            android:id="@+id/assessmentProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:progress="30" />

        <TextView
            android:id="@+id/assessmentProgressScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:gravity="center"
            android:text="12/25"
            android:textColor="@color/ni_blue"
            android:textSize="12sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>