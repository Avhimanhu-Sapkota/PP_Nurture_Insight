<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/each_comment_card">

    <LinearLayout
        android:id="@+id/comment_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ni_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/comment_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="Comment Message"
                android:textColor="@color/ni_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/comment_message_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/alegreya_sans"
                android:text="Date"
                android:layout_marginBottom="5dp"
                android:textAlignment="textEnd"
                android:textColor="@color/ni_blue"
                android:layout_below="@+id/comment_username"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/comment_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/alegreya_sans"
                android:layout_below="@+id/comment_message"
                android:text="Username"
                android:textAlignment="textEnd"
                android:textColor="@color/ni_blue"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>