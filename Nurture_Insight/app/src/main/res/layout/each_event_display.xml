<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_marginTop="5dp"
    android:elevation="20dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/each_event_card"
    android:background="@drawable/background_1"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/event_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/event_background" />

        <TextView
            android:id="@+id/each_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:gravity="center"
            android:text="Event Title Here"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/each_event_dateAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:text="Date and Time"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_below="@+id/each_event_title"/>

        <TextView
            android:id="@+id/each_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:text="Event Location"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/each_event_dateAndTime"/>

        <TextView
            android:id="@+id/each_event_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:text="Event Host Name"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@+id/each_event_location" />

        <TextView
            android:id="@+id/each_event_host_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:text="Event Host Contact No"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_below="@+id/each_event_host"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>