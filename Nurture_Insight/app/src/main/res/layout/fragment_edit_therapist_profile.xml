<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".therapist_profile.EditTherapistProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/therapist_edit_backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/main_imgView_header_txt"
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/therapist_edit_backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/header" />

        <ImageView
            android:id="@+id/imgView_background"
            android:layout_width="0dp"
            android:layout_height="167dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_imgView_header_txt"
            app:srcCompat="@drawable/background_6" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/therapist_profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/therapist_profile_picture"
            app:civ_border_color="@color/ni_blue"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgView_background" />

        <TextView
            android:id="@+id/therapist_edit_title"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:gravity="center"
            android:text="Therapist Profile Edit"
            android:textColor="@color/ni_blue"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_profile_image" />

        <TextView
            android:id="@+id/therapist_edit_message"
            android:layout_width="324dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:text="@string/edit_message"
            android:textColor="@color/ni_blue"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_edit_title" />

        <EditText
            android:id="@+id/therapist_edit_exitText_username"
            android:layout_width="312dp"
            android:layout_height="46dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:hint="@string/username"
            android:inputType="textPersonName"
            android:textColor="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_edit_message" />

        <EditText
            android:id="@+id/therapist_edit_exitText_email"
            android:layout_width="312dp"
            android:layout_height="46dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:hint="@string/signUp_message2"
            android:inputType="textEmailAddress"
            android:textColor="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_edit_exitText_username" />

        <EditText
            android:id="@+id/therapistEdit_exitText_expertise"
            android:layout_width="312dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:hint="@string/therapistInfo_SpecialTitle"
            android:inputType="textPersonName"
            android:textColor="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_edit_exitText_email" />

        <EditText
            android:id="@+id/therapistEdit_exitText_degree"
            android:layout_width="312dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:hint="@string/therapistInfo_degree"
            android:inputType="textPersonName"
            android:textColor="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapistEdit_exitText_expertise" />

        <EditText
            android:id="@+id/therapistEdit_exitText_workat"
            android:layout_width="312dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:hint="@string/therapistInfo_workAt"
            android:inputType="textPersonName"
            android:textColor="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapistEdit_exitText_degree" />

        <EditText
            android:id="@+id/therapistEdit_exitText_bio"
            android:layout_width="312dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:ems="10"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:hint="@string/therapistInfo_Bio"
            android:inputType="textPersonName"
            android:textColor="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapistEdit_exitText_workat" />


        <TextView
            android:id="@+id/therapist_edit_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="45dp"
            android:fontFamily="@font/alegreya_sans_bold"
            android:gravity="center"
            android:text="@string/sca_message1"
            android:textColor="@color/ni_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapistEdit_exitText_bio" />


        <RadioGroup
            android:id="@+id/therapist_assessment_answer_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_edit_question">

            <RadioButton
                android:id="@+id/therapist_assessment_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans"
                android:text="Better Sleep"
                android:textColor="@color/ni_blue" />

            <RadioButton
                android:id="@+id/therapist_assessment_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans"
                android:text="Happy Living"
                android:textColor="@color/ni_blue" />

            <RadioButton
                android:id="@+id/therapist_assessment_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans"
                android:text="Manager Anger"
                android:textColor="@color/ni_blue" />

            <RadioButton
                android:id="@+id/therapist_assessment_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans"
                android:text="Overcome Depression"
                android:textColor="@color/ni_blue" />

            <RadioButton
                android:id="@+id/therapist_assessment_option5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans"
                android:text="Beat Anxiety or Stress"
                android:textColor="@color/ni_blue" />
        </RadioGroup>

        <Button
            android:id="@+id/therapist_edit_button"
            android:layout_width="219dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style"
            android:text="Save Changes"
            app:backgroundTint="@color/ni_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapist_assessment_answer_options" />

        <Button
            android:id="@+id/therapist_delete_button"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style"
            android:text="Delete Account"
            app:backgroundTint="@color/ni_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/therapist_edit_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>